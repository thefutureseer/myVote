{
  "compilerOptions": {
    // Specifies the base directory for resolving non-relative module names
    "baseUrl": ".",
    // Defines path mappings for module names
    "paths": {
      // Maps any module starting with "@components/" to the "components/" directory
      "@components/*": ["src/app/components/*"],
      // Maps any module starting with "@lib/" to the "lib/" directory
      "@lib/*": ["src/lib/*"],
      // Maps any module starting with "@public/" to the "public/" directory
      "@public/*": ["public/*"],
      // Maps any module starting with "@/"" to the "src/" directory
      "@/*": ["./src/*"]
    }
  }
}
